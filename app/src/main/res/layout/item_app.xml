<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:layout_height="100dp"
    android:orientation="horizontal">
    <View
        android:background="@color/colorDividerGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp" />

    <TextView
        android:textColor="@color/colorTextBlack"
        android:id="@+id/tv_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_icon"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imv_icon"
        android:ellipsize="end"
        android:textSize="18sp"
        android:maxLines="1" />
    <TextView
        android:layout_marginTop="5dp"
        android:textColor="@color/colorTextBlack"
        android:id="@+id/tv_info"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imv_icon"
        android:ellipsize="end"
        android:textSize="13sp"
        android:maxLines="1" />
    <TextView
        android:textColor="@color/colorTextGrey"
        android:id="@+id/tv_hot"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imv_icon"
        android:ellipsize="end"
        android:textSize="13sp"
        android:maxLines="1" />
    <TextView

        android:gravity="center"
        android:shadowColor="@color/colorBackgroundWhite"
        android:id="@+id/btn_download"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/download_shape"
        android:text="@string/download"
        android:textColor="@color/colorDownload"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDividerGray" />
</RelativeLayout>